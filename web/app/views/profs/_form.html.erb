<%= form_for(@prof) do |f| %>
  <%= render "shared/error_messages", :model => @prof %>

  <table>
    <% for item in
      [
        [f.label(:firstname),         f.text_field(:firstname),           "required"],
        [f.label(:surname),           f.text_field(:surname),             "required"],
        [f.label(:email),             f.text_field(:email)],
        [f.label(:gender),            select_tag("prof[gender]",          options_for_select({ "female" => 0, "male" => 1}, (@prof.gender.to_s == 'male' ? 1 : 0))), "required"],
        [f.label(:publish_ok),        f.check_box(:publish_ok),           "Check if results may be published. Unchecked = may be censored."],
        [f.label(:unencrypted_ok),    f.check_box(:unencrypted_ok),       "Check if it's okay to send the results via unencrypted mail. Assumed true if publish is checked."]
      ]
    %>
      <tr>
        <th><%= item.shift %></th>
        <td><%= item.shift %></td>
        <% for data in item do %> <td><%=h data %></td> <% end %>
      </tr>
    <% end %>
  </table>

  <div class="button-group">
    <%= f.submit submit_text, :disable_with => "Savingâ€¦", :class => "button primary" %>
    <%= link_to 'Cancel', profs_path, :class => "button" %>
  </div>
<% end %>
